<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_margin="0dp"
    android:padding="0dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel Bag"
            android:textSize="20sp"
            android:textIsSelectable="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp" />
        <Button
            android:text="Start"
            android:id="@+id/travelstart"
            style="@style/StartStop"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looks in multiple locations"
        android:id="@+id/button1"
        style="@style/MainButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carries items to door by hand"
        android:id="@+id/button2"
        style="@style/MainButton"/>
    <Button
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:text="Uses alternative carrier, not bag"
        android:id="@+id/button3"
        style="@style/MainButton"/>
    <Button
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:text="Does not put items in bag (exception: tea, $, phone by hand)"
        android:id="@+id/button4"
        style="@style/MainButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does not finish task"
        android:id="@+id/button5"
        style="@style/MainButton"/>

</LinearLayout>