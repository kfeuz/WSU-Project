<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snack"
            android:textSize="20sp"
            android:textIsSelectable="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:background="@android:color/holo_green_light"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looks in multiple locations IE"
        android:id="@+id/button1"
        style="@style/MainButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takes more than one snack IE"
        android:id="@+id/button2"
        style="@style/MainButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chooses candy, not milk choc. IE"
        android:id="@+id/button3"
        style="@style/MainButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Changes snack after finishing task IE"
        android:id="@+id/button4"
        style="@style/MainButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chooses non-snack item IC"
        android:id="@+id/button5"
        style="@style/MainButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chooses dark choc. IC"
        android:id="@+id/button6"
        style="@style/MainButton"/>
    <Button
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does not bring snack to door IC"
        android:id="@+id/button7"
        style="@style/MainButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does not finish task IC"
        android:id="@+id/button8"
        style="@style/MainButton"/>

</LinearLayout>